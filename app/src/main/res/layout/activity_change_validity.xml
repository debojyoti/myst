<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"

    android:id="@+id/datalayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#001621">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        plainpie:srcCompat="@drawable/main_ac_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button6"
        android:layout_marginTop="25dp"
        android:onClick="backToMainActivity"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/single_back"
        android:layout_marginStart="18dp"
        android:text=""
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="170dp"
        android:background="#012535"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:id="@+id/relativeLayout4"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Current Data Pack : 1024 GB"
            android:textColor="#04a82b"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ff1212"
            android:text="Currently Remaining : 500 MB"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView12" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true"
        android:textColorHint="#7ac48a"
        android:textAlignment="center"
        android:layout_marginTop="13dp"
        android:background="#1b5bdb"
        android:ems="10"
        android:textColor="#fff"
        android:hint="Change Validity (in Days)"
        android:inputType="numberDecimal"
        android:text="" />

    <Button
        android:id="@+id/button7"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:visibility="invisible"
        android:background="@drawable/change_validity"
        android:text=""
        android:onClick="changeVal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1b5bdb"
        android:textSize="19dp"
        android:layout_marginBottom="31dp"
        android:text="Data Pack will expire in : "
        android:layout_above="@+id/editText"
        android:layout_alignStart="@+id/button6"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1b5bdb"
        android:textSize="23dp"
        android:text="300 Days"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:textColor="#ed1c24"
        android:textSize="19dp"
        android:layout_height="wrap_content"
        android:text="Change Validity"
        android:layout_above="@+id/relativeLayout4"
        android:layout_alignEnd="@+id/relativeLayout4" />

</RelativeLayout>
