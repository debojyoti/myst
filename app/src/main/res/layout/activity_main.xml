<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"

    android:id="@+id/datalayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#001621">

    <!--<az.plainpie.PieView-->
    <!--android:id="@+id/animated_pie_view_1"-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_height="200dp"-->
    <!--android:layout_marginLeft="150dp"-->
    <!--android:layout_marginTop="90dp"-->




    <!--plainpie:inner_pie_padding="30"-->
    <!--plainpie:percentage="70"-->
    <!--plainpie:percentage_size="0"-->
    <!--plainpie:inner_text_visibility="true"/>-->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignTop="@+id/button2"
        android:layout_marginEnd="-44dp"
        android:layout_marginRight="49dp"
        plainpie:srcCompat="@drawable/main_ac_logo"
        android:layout_alignBottom="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/advance_set"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/add_data"
        android:layout_marginTop="13dp"
        android:text=""
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="140dp"
        android:background="@drawable/add_validity"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignTop="@+id/button3"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="" />

    <Button
        android:id="@+id/button5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/reset"
        android:layout_alignBottom="@+id/button4"
        android:layout_centerHorizontal="true"
        android:text="" />
    <az.plainpie.PieView
        android:id="@+id/animated_pie_view_2"
        android:layout_width="80dp"
        android:background="@drawable/daily_bc"
        android:layout_height="80dp"
        android:layout_marginTop="470dp"

        android:layout_marginLeft="260dp"
        plainpie:inner_pie_padding="10"
        plainpie:percentage="1"
        plainpie:percentage_size="0"
        plainpie:inner_text_visibility="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#012535"
        android:layout_marginTop="9dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true">

        <az.plainpie.PieView
            android:id="@+id/animated_pie_view_1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"


            android:layout_marginLeft="175dp"
            plainpie:inner_pie_padding="10"
            plainpie:percentage="1"
            plainpie:percentage_size="0"
            plainpie:inner_text_visibility="true"/>




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:background="@drawable/main_ac_noti"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="2 Days Remaining"
        android:paddingLeft="49dp"

        android:textColor="#fff"
        android:textSize="21dp"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/imageView5"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/animated_pie_view_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        plainpie:srcCompat="@drawable/daily_bc" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/animated_pie_view_2"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="19dp"

        android:layout_marginStart="19dp"
        plainpie:srcCompat="@drawable/daily_bc" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5"

        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/imageView5"
        android:text="Daily Burn Rate : 300 MB" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/imageView4"
        android:text="Burned : 100 MB" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ff2222"
        android:textSize="20dp"
        android:text="Next Warning at 7.5 GB Usage"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_marginTop="94dp"
        android:text="Data Pack : 10 GB" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="Remaining : 7 GB"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_above="@+id/textView9"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_centerVertical="true"

        android:text="Used : 3 GB"
        android:textColor="#fff"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="123dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="21dp"
            android:text=""
            android:textSize="30dp"
            android:textColor="#fff"
            android:id="@+id/txtt"

            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="60dp"
            android:text="Remaining"
            android:textSize="15dp"
            android:id="@+id/sss"
            android:textColor="#fff"

            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>
